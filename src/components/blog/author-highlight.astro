---
import { HugeiconsIcon } from "@merchbaseco/icons";
import { InstagramIcon, NewTwitterIcon } from "@merchbaseco/icons/core-solid-rounded";

const classProp =
  typeof Astro.props === "object" && Astro.props !== null
    ? (Astro.props as Record<string, unknown>).class
    : undefined;
const className = typeof classProp === "string" && classProp.length > 0 ? classProp : "mt-16";

const authorImage = "/author-zach.jpg";
const instagramUrl = "https://www.instagram.com/zachknickerbocker/";
const xUrl = "https://x.com/zachknicker";

const socialLinks = [
  {
    href: xUrl,
    label: "Follow Zach on X",
    icon: NewTwitterIcon,
  },
  {
    href: instagramUrl,
    label: "Follow Zach on Instagram",
    icon: InstagramIcon,
  },
] as const;
---

<section class={`relative rounded-3xl border bg-gray-50 p-8 ${className}`}>
    <div class="absolute right-8 top-8 flex items-center gap-3">
        {
            socialLinks.map((social) => (
                <a
                    href={social.href}
                    class="group inline-flex h-10 w-10 items-center justify-center rounded-full border border-gray-200 text-gray-500 transition hover:border-indigo-200 hover:text-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"
                    aria-label={social.label}
                >
                    <HugeiconsIcon
                        icon={social.icon}
                        size={20}
                        color="currentColor"
                        aria-hidden="true"
                        className="shrink-0"
                    />
                </a>
            ))
        }
    </div>
    <div class="flex items-start gap-6">
        <img
            src={authorImage}
            alt="Zach Knickerbocker"
            width="96"
            height="96"
            loading="lazy"
            class="h-24 w-24 rounded-full border border-gray-200 object-cover shadow-sm"
        />

        <div class="space-y-3">
            <div>
                <p class="text-2xl font-semibold text-gray-900">
                    Zach Knickerbocker
                </p>
                <p class="opacity-70">MerchBase Founder Â· Manhattan, NY</p>
            </div>
            <p class="text-gray-700 leading-7">
                Hey there! I'm Zach. I have designed and sold Print on Demand
                t-shirts on Amazon, Etsy, and other PoD marketplaces since 2017.
                Having started my career as a software engineer working at
                Amazon, MerchBase has become my passion project and creative
                outlet for melding my Print on Demand knowledge with web
                development. I hope that what I share here can help you on your
                journey!
            </p>
        </div>
    </div>
</section>
