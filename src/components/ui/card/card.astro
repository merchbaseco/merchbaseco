---
import { Squircle, type SquircleProps } from "@/components/ui/squircle";

export interface CardProps extends SquircleProps {
  className?: string;
}

const {
  class: classAttr = "",
  className = "",
  ...attributes
} = Astro.props as CardProps & { class?: string };

const baseClass =
  "rounded-3xl border border-black/5 bg-white p-6 shadow-sm transition-transform duration-200 ease-out";
const mergedClass = [baseClass, classAttr, className].filter(Boolean).join(" ");
---

<Squircle class={mergedClass} {...attributes}>
  <slot />
</Squircle>
