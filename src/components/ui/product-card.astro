---
import { Squircle, type SquircleProps } from "@/components/ui/squircle";

interface Props extends SquircleProps {
    className?: string;
}

const {
    class: classAttr = "",
    className = "",
    cornerRadius = 24,
    cornerSmoothing = 0.8,
    ...squircleProps
} = Astro.props as Props & { class?: string };

const baseClasses =
    "group relative flex h-[530px] cursor-pointer flex-col justify-between p-8 transition-transform duration-200 ease-out hover:scale-[1.02]";
const mergedClass = [baseClasses, classAttr, className]
    .filter(Boolean)
    .join(" ");
---

<Squircle
    cornerRadius={cornerRadius}
    cornerSmoothing={cornerSmoothing}
    class={mergedClass}
    {...squircleProps}
>
    <slot />
</Squircle>
