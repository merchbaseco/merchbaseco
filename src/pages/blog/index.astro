---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { TimelineCard } from "@/components/pages/blog/TimelineCard";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);

const formatFullDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    month: "long",
    day: "numeric",
    year: "numeric",
  });

const formatShortDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });

const getPrimaryTag = (tags: string[] = []) => tags[0] ?? "Update";

const timelineItems = posts.map((post) => {
  const primaryTag = getPrimaryTag(post.data.tags);

  return {
    anchor: `post-${post.slug}`,
    datetime: post.data.publishDate.toISOString(),
    fullDate: formatFullDate(post.data.publishDate),
    shortDate: formatShortDate(post.data.publishDate),
    tag: primaryTag,
    title: post.data.title,
  };
});

const detailHrefFor = (slug: string) => new URL(`./${slug}/`, Astro.url).pathname;
---

<BaseLayout title="Blog Â· MerchBase">
  <main class="mx-auto flex max-w-6xl flex-col gap-16 px-6 py-16 lg:flex-row lg:gap-24">
    <aside class="lg:w-72">
      <div class="sticky top-28 hidden lg:block">
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-gray-400">MerchBase</p>
        <h1 class="mt-3 text-3xl font-semibold text-gray-900">Product & Community Updates</h1>
        <p class="mt-4 text-sm text-gray-600">
          Catch every launch, experiment, and community recap in a single scrollable timeline.
        </p>

        <nav aria-label="Blog timeline" class="mt-12">
          <ol class="relative space-y-8 pl-6 before:absolute before:left-[0.375rem] before:top-0 before:h-full before:w-px before:bg-gray-200 before:content-['']">
            {timelineItems.map((item) => (
              <li class="relative pl-4" key={item.anchor}>
                <span class="absolute left-0 top-2 inline-flex -translate-x-1/2 items-center justify-center">
                  <span class="flex h-2.5 w-2.5 rounded-full bg-emerald-500 ring-4 ring-white" />
                </span>

                <a
                  class="group block text-left"
                  href={`#${item.anchor}`}
                >
                  <time class="text-xs uppercase tracking-[0.35em] text-gray-400" datetime={item.datetime}>
                    {item.shortDate}
                  </time>
                  <p class="mt-1 text-sm font-semibold text-gray-700 transition group-hover:text-gray-900">
                    {item.title}
                  </p>
                  <span class="mt-1 inline-flex items-center rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.3em] text-gray-500">
                    {item.tag}
                  </span>
                </a>
              </li>
            ))}
          </ol>
        </nav>
      </div>
    </aside>

    <div class="flex-1 space-y-16">
      <header class="lg:hidden">
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-gray-400">MerchBase</p>
        <h1 class="mt-3 text-3xl font-semibold text-gray-900">Product & Community Updates</h1>
        <p class="mt-4 text-sm text-gray-600">
          Catch every launch, experiment, and community recap in a single scrollable timeline.
        </p>
      </header>

      {posts.map((post) => {
        const datetime = post.data.publishDate.toISOString();
        const formattedDate = formatFullDate(post.data.publishDate);
        const primaryTag = getPrimaryTag(post.data.tags);

        return (
          <TimelineCard
            key={post.id}
            anchor={`post-${post.slug}`}
            datetime={datetime}
            displayDate={formattedDate}
            href={detailHrefFor(post.slug)}
            tag={primaryTag}
            title={post.data.title}
            description={post.data.description}
          />
        );
      })}
    </div>
  </main>
</BaseLayout>
