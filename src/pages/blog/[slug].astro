---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

type BlogEntry = CollectionEntry<"blog">;

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { entry: post },
  }));
}

const { entry } = Astro.props as { entry: BlogEntry };
const { Content, data } = await entry.render();
const formattedDate = data.publishDate.toLocaleDateString("en-US", {
  month: "long",
  day: "numeric",
  year: "numeric",
});
---

<BaseLayout title={`${data.title} Â· MerchBase`}>
  <main class="mx-auto max-w-3xl px-6 py-16">
    <article class="mx-auto">
      <p class="mb-3 text-sm font-semibold uppercase tracking-wide text-blue-600">{formattedDate}</p>
      <h1 class="mb-6 text-4xl font-bold text-gray-900">{data.title}</h1>
      <p class="mb-10 text-lg text-gray-600">{data.description}</p>
      <div class="space-y-6 text-lg leading-relaxed text-gray-700">
        <Content />
      </div>
    </article>
  </main>
</BaseLayout>
