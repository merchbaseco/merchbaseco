---
import BaseLayout from "@/layouts/layout.astro";
const lastUpdated = new Date("2025-01-01");
const formatDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    month: "long",
    day: "numeric",
    year: "numeric",
  });
