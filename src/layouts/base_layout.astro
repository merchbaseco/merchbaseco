---
import "@/styles/global.css";
import SiteHeader from "@/components/site_header.astro";

interface Props {
  title?: string;
}

const { title = "MerchBase" } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <noscript>
      <style>
        {`[data-squircle] { clip-path: none !important; border-radius: var(--squircle-fallback-radius, 0px) !important; }`}
      </style>
    </noscript>
    <SiteHeader />
    <slot />
  </body>
</html>
